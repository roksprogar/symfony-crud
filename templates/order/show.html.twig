{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>OrderNumber</th>
                <td>{{ order.orderNumber }}</td>
            </tr>
            <tr>
                <th>CustomerPhoneNumber</th>
                <td>{{ order.customerPhoneNumber }}</td>
            </tr>
            <tr>
                <th>OrderStatus</th>
                <td>{{ order.orderStatus }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order.price }}</td>
            </tr>
            <tr>
                <th>Subscription Package</th>
                <td>
                    {% if order.subscriptionPackage %}
                        {{ order.subscriptionPackage.name }}
                    {% else %}
                        None
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Articles</th>
                <td>
                    {% if order.articles|length > 0 %}
                        {{ order.articles|map(item => item.name)|join(', ') }}
                    {% else %}
                        None
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ order.dateCreated ? order.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>
    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}