{% extends 'base.html.twig' %}

{% block title %}Subscription Package{% endblock %}

{% block body %}
    <h1>Subscription Package</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscription_package.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ subscription_package.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ subscription_package.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ subscription_package.price }}</td>
            </tr>
            <tr>
                <th>IncludesMonthlyMagazine</th>
                <td>{{ subscription_package.includesMonthlyMagazine ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ subscription_package.dateCreated ? subscription_package.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_subscription_package_index') }}">back to list</a>
    <a href="{{ path('app_subscription_package_edit', {'id': subscription_package.id}) }}">edit</a>

    {{ include('subscription_package/_delete_form.html.twig') }}
{% endblock %}